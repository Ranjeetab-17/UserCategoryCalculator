<script>
    (function () {
        $("#btnUserInfo").click(function () {           
            var userInfo = {};
            userInfo.Name = $("#txtName").val();
            userInfo.Age = $("#txtAge").val();
            userInfo.Height = $("#txtHieght").val();

            var userInput = JSON.stringify(userInfo);

            $.post("/User/SaveUserInfo", userInfo, function (data) {
                alert(data)
            })
        })
    })();
</script>